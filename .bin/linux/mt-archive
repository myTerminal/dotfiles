#!/usr/bin/env bash

command=${1}

if [ "${command}" == "do" ]; then

    if [[ $# -lt 3 ]]; then
        echo "Usage: mt-archive do <compression-type> <files...>"
        exit 1
    fi

    operation=${2}
    arguments=${@:3}
    filename="${arguments%%.*}"

    case "${operation}" in
        zip)
            zip -r "${filename}.zip" $arguments
            ;;

        tar)
            tar -cvzf "${filename}.tar.gz" $arguments
            ;;

        *)
            echo "Not implemented!"
            ;;
    esac
elif [ "${command}" == "undo" ]; then

    if [[ $# -lt 2 ]]; then
        echo "Usage: mt-archive undo <files...>"
        exit 1
    fi

    arguments=${@:2}
    extension=${arguments#*.}

    case "${extension}" in
        zip)
            unzip "${arguments}"
            ;;

        tar)
            tar -xvzf "${arguments}"
            ;;

        tar.xz)
            tar -xvf "${arguments}"
            ;;

        tar.gz)
            tar -xvzf "${arguments}"
            ;;

        gz)
            gzip -dk "${arguments}"
            ;;

        rar)
            unrar e "${arguments}"
            ;;

        7z)
            7zip e "${arguments}"
            ;;

        *)
            echo "Not implemented!"
            ;;
    esac
else
    echo "Usage: mt-archive <operation>"
fi
